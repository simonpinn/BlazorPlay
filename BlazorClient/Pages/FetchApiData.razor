@page "/fetchapidata"
@inject HttpClient Http


<h1>Api Data</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (data == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in data)
            {
                <tr>
                    <td>@item</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    string[] data;

    protected override async Task OnInitAsync()
    {
        data = await Http.GetJsonAsync<string[]>("http://localhost:52433/api/values");
    }

        protected override bool ShouldRender()
        {
            return base.ShouldRender();
        }
}
